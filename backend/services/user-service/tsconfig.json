{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "../../",
    "baseUrl": "../../",
    "paths": {
      "@shared/*": ["shared/*"],
      "@corp-astro/shared-types": ["shared/types"],
      "@corp-astro/shared-types/*": ["shared/types/*"]
    },
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "noImplicitThis": false,
    "strictPropertyInitialization": false
  },
  "include": ["src/**/*", "../../shared/**/*", "../../src/middleware/validators/role.validator.ts"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
